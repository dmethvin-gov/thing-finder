    entry("Kroger #456", "3456 Main St., Anytown, MD  20910", "https://google.com", 1.7, "555-555-1212");
    entry("Kroger #789", "3456 Main St., Anytown, MD  20910", "https://google.com", 1.7, "555-555-1212");
</script>