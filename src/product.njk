    const zip = "20910";
    function heading(name, image, distance, zip) {
        fillTemplate("product-details-template", {
            PRODUCT_NAME: name,
            PRODUCT_IMAGE: image,
            MILES: distance,
            ZIP: zip
        }, ".heading");
    };
    function entry(name, addr, url, dist, phone) {
        fillTemplate("store-listing-template", {
            NAME: name,
            ADDRESS: addr,
            SITE: url,
            MILES: dist,
            PHONE: phone
        }, ".store-list-items");
    };
